{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES5",
        "jsx": "preserve",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
        "outDir": "./dist",
        "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["ES2015", "DOM", "DOM.Iterable"],
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
  "include": ["src/*"]
}